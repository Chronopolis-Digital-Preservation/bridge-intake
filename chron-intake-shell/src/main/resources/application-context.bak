  <!--Low-level Rabbit Connection Factory-->
  <bean id="rabbitConnFactory" class="com.rabbitmq.client.ConnectionFactory">
    <!--heartbeat every 60 seconds-->
    <property name="requestedHeartbeat" value="60"/>
    <!--connection timeout after 5 min-->
    <property name="connectionTimeout" value="300"/>
    <proproperty name="virtualHost" value="chronopolis">
  </bean>

  <!--Application-level Connection Factory, wrapping the Rabbit Connection Factory-->
  <bean id="connectionFactory"
        class="org.springframework.amqp.rabbit.connection.CachingConnectionFactory">
    <constructor-arg ref="rabbitConnFactory"/>
    <property name="publisherConfirms" value="true"/>
    <property name="publisherReturns" value="true"/>
    <property name="connectionListeners">
      <list>
        <bean class="org.chronopolis.amqp.ConnectionListenerImpl"/>
      </list>
    </property>
    <!--Example of providing a list of brokers to the connection factory-->
    <property name="addresses" value="adapt-mq.umiacs.umd.edu"/>
  </bean>

  <!--Admin configures queues/exchanges in the remote broker-->
  <rabbit:admin connection-factory="connectionFactory"/>

  <!--Entry-point for making direct 'send' requests to the broker-->
  <rabbit:template id="rabbitTemplate" exchange="chronopolis-control"
                   connection-factory="connectionFactory"
                   mandatory="true"/>


  <!--Message Producer-->
  <bean id="producer" class="org.chronopolis.amqp.TopicProducer">
    <constructor-arg index="0" ref="rabbitTemplate"/>
  </bean>

</beans>
