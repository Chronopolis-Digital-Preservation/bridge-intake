<assembly>
	<id>driver</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>jar</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.properties</include>
				<include>rabbit-context.xml</include>
			</includes>
		</fileSet>
	</fileSets>

	<dependencySets>
		<dependencySet>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>

</assembly>

